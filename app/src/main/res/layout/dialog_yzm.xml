<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg_twobtn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请输入答案，即可获取验证码"
            android:textSize="14sp"
            android:textColor="@color/global_whitecolor"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center" >


            <ImageView
                android:id="@+id/iv_yanzhengma_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                 />

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/dialog_bg_answer"
                android:gravity="center"
                android:hint="请输入答案"
                android:textColorHint="@color/text_graycolor"
                android:textColor="@color/bg_one_black"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_green"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/text_green"
                android:textSize="15sp"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>