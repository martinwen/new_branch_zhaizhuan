<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/bg_two_black">

    <TextView
        android:id="@+id/notice_name" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【公司动态】"
        android:textColor="@color/global_whitecolor"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/notice_point"
        android:layout_toRightOf="@id/notice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:src="@drawable/vip_redpoint"/>
    <TextView
        android:id="@+id/notice_time" 
        android:layout_toRightOf="@id/notice_point"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-3-20 23:00:00"
        android:textColor="@color/global_whitecolor"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/notice_title" 
        android:layout_below="@id/notice_time"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/global_whitecolor"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_checkbox_news"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_one_black" />
</LinearLayout>