<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_two_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_bg_islogin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        >

                        <ImageView
                            android:id="@+id/iv_zhanneixin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_zhanneixin_hasnew" />

                        <LinearLayout
                            android:id="@+id/ll_islogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/global_whitecolor"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/iv_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/user_ic_normal" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_setting"
                            android:visibility="invisible"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_notlogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/user_logo_not"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="center"
                            android:text="您好，请登录"
                            android:textColor="@color/global_whitecolor"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_viplogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/user_ic_notlogin" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/user_bg_up"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/iv_zong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/user_zongzichan"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:text="总资产"
                                android:textColor="@color/bg_one_black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_eye"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/iv_zong"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/user_open" />

                            <TextView
                                android:id="@+id/tv_change"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="切换新版"
                                android:textColor="@color/global_whitecolor"
                                android:textSize="13sp"
                                android:background="@drawable/shape_bg_btn_red_change" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_zong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="5dp"
                            android:text="0.00元"
                            android:textColor="@color/bg_one_black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="昨日总收益"
                                    android:textColor="@color/bg_one_black"
                                    android:textSize="13sp" />
                                <TextView
                                    android:id="@+id/tv_zuori"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0.00元"
                                    android:textColor="@color/bg_one_black"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计总收益"
                                    android:textColor="@color/bg_one_black"
                                    android:textSize="13sp" />
                                <TextView
                                    android:id="@+id/tv_leiji"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0.00元"
                                    android:textColor="@color/bg_one_black"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_tixian"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/user_btn_tixian" />

                            <ImageView
                                android:id="@+id/iv_chongzhi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/user_btn_chongzhi" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jiaxipiao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_jiaxipiao"
                    android:drawablePadding="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="加息票"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="11sp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/bg_one_black"/>
                <TextView
                    android:id="@+id/tv_hongbao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_hongbao"
                    android:drawablePadding="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="红包"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="11sp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/bg_one_black"/>
                <TextView
                    android:id="@+id/tv_tixianpiao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_tixianpiao"
                    android:drawablePadding="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="提现票"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="11sp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/bg_one_black"/>
                <TextView
                    android:id="@+id/tv_youxiangou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/user_youxiangou"
                    android:drawablePadding="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="优先购"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/bg_one_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user_jiangjin"
                        android:gravity="center"
                        android:text="奖金余额"
                        android:textColor="@color/text_graycolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_jiang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="right|center"
                        android:paddingRight="15dp"
                        android:text="0.00元"
                        android:textColor="@color/global_whitecolor"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/bg_one_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user_yue"
                        android:gravity="center"
                        android:text="账户余额"
                        android:textColor="@color/text_graycolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="right|center"
                        android:paddingRight="15dp"
                        android:text="0.00元"
                        android:textColor="@color/global_whitecolor"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/bg_one_black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user_font_four"
                        android:gravity="center"
                        android:text="小饭团"
                        android:textColor="@color/text_graycolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_ftmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="right|center"
                        android:paddingRight="15dp"
                        android:text="0.00元"
                        android:textColor="@color/global_whitecolor"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/bg_one_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user_font_two"
                        android:gravity="center"
                        android:text="大饭团"
                        android:textColor="@color/text_graycolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_ftmax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="right|center"
                        android:paddingRight="15dp"
                        android:text="0.00元"
                        android:textColor="@color/global_whitecolor"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/bg_one_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user_font_one"
                        android:gravity="center"
                        android:text="精英团"
                        android:textColor="@color/text_graycolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_jingying"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="right|center"
                        android:paddingRight="15dp"
                        android:text="0.00元"
                        android:textColor="@color/global_whitecolor"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/bg_one_black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

