<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
		android:padding="10dp"
    	android:orientation="vertical"
		android:background="@color/global_whitecolor">
	     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_jiaxi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user_jiaxipiao"
                android:drawablePadding="8dp"
				android:gravity="center"
                android:text="饭盒被邀请加息"
                android:textColor="@color/bg_one_black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_jiaxi_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1%"
                android:textColor="@color/text_red_dark"
                android:textSize="15sp" />
        </LinearLayout>
	     <TextView
	         android:id="@+id/tv_jiaxi_day"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:drawableLeft="@drawable/point_black"
	    	android:drawablePadding="5dp"
	    	android:text="加息天数"
	    	android:textSize="11sp"
	    	android:textColor="@color/bg_one_black"
	    	/>
	     <TextView
			 android:id="@+id/tv_jiaxi_endtime"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:drawableLeft="@drawable/point_black"
	    	android:drawablePadding="5dp"
	    	android:text="加息时间"
	    	android:textSize="11sp"
	    	android:textColor="@color/bg_one_black"
	    	/>
	     <TextView 
	         android:id="@+id/tv_jiaxi_info"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:drawableLeft="@drawable/point_black"
	    	android:drawablePadding="5dp"
	    	android:text="特别说明"
	    	android:textSize="11sp"
	    	android:textColor="@color/bg_one_black"
	    	/>
	     <TextView 
	         android:id="@+id/tv_jiaxi_method"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:drawableLeft="@drawable/point_black"
	    	android:drawablePadding="5dp"
	    	android:text="获得来源"
	    	android:textSize="11sp"
	    	android:textColor="@color/bg_one_black"
	    	/>
     </LinearLayout>

	<ImageView
		android:id="@+id/iv_unused"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="20dp"
		android:src="@drawable/jiaxipiao_btn_used" />
</RelativeLayout>
