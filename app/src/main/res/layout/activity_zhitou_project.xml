<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_title_red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="出借详情"
            android:textColor="@color/global_whitecolor"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_two_black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selector_shadow"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/zhuanrang_zhuan_ok"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/bg_one_black"
                        android:textSize="12sp"
                        />
                        <TextView
                            android:id="@+id/tv_zhuanrang_ing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="【转让中】"
                            android:textColor="@color/text_graycolor"
                            android:textSize="12sp"
                            android:visibility="invisible"/>
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_line_xuxian"
                        android:layerType="software"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="出借金额"
                                    android:textColor="@color/text_graycolor"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/iv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/zaitou_shouyizhong" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_money_buy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/bg_one_black"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_yuji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预计总收益"
                                android:textColor="@color/text_graycolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_leiji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/bg_one_black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="历史年化"
                                android:textColor="@color/text_graycolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/bg_one_black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已结收益"
                                android:textColor="@color/text_graycolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_yijie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/bg_one_black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/tv_huikuan_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/sanbiao_calc"
                        android:drawablePadding="5dp"
                        android:text="下一个付息日："
                        android:textColor="@color/bg_one_black"
                        android:textSize="11sp"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="出借时间"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_time_chujie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="承接价格"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_chengjie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text="0.00元"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />

            <LinearLayout
                android:id="@+id/ll_zhuanrangshijian"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_zhuanrang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="转让时间"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_zhuanrang_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/iv_line_zhuanrangshijian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />
            <LinearLayout
                android:id="@+id/ll_daoqi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daoqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="到期时间"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_daoqi_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/iv_line_daoqi"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />

            <LinearLayout
                android:id="@+id/ll_zhuanrang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="转让记录"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text="查看"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/iv_line_zhuanrang"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />

            <LinearLayout
                android:id="@+id/ll_zhaiquan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="债权信息"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text="查看"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/iv_line_zhaiquan"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black"/>

            <LinearLayout
                android:id="@+id/ll_zijin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="资金明细"
                    android:textColor="@color/text_graycolor"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:text="查看"
                    android:textColor="@color/global_whitecolor"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_one_black" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="转让"
        android:textColor="@color/global_whitecolor"
        android:textSize="16sp"
        android:background="@color/text_red_dark"
        android:visibility="gone"/>

</LinearLayout>
