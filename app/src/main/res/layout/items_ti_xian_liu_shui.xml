<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_whitecolor"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_banklogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buyconfirm_bg_bankname" />

        <LinearLayout
            android:layout_toRightOf="@id/iv_banklogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行名称"
                android:textColor="@color/bg_one_black"
                android:textSize="13sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-4-12"
                android:textColor="@color/text_graycolor"
                android:textSize="13sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000.00"
                android:textColor="@color/text_red_dark"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_fee"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费：2元"
                android:textColor="@color/text_graycolor"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/tixianliushui_ing_status"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>
    <include layout="@layout/items_hide_layout"
        />

</LinearLayout>
</LinearLayout>